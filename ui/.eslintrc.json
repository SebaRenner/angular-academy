{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "app",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "app",
            "style": "camelCase",
            "type": "attribute"
          }
        ],
        "quotes": [
          "error",
          "single",
          {
            "avoidEscape": false
          }
        ],
        "semi": [
          "error",
          "always"
        ],
        "curly": "error",
        "comma-dangle": [
          "error",
          "always-multiline"
        ],
        "no-multiple-empty-lines": [
          "error",
          {
            "max": 1
          }
        ],
        "require-await": "error",
        "padding-line-between-statements": [
          "error",
          {
            "blankLine": "always",
            "prev": "block-like",
            "next": "*"
          }
        ],
        "space-infix-ops": [
          "error",
          {
            "int32Hint": true
          }
        ],
        "object-curly-spacing": [
          "error",
          "always"
        ],
        "key-spacing": "error",
        "brace-style": "error",
        "eqeqeq": "error",
        "no-empty": "error",
        "prefer-object-spread": "error",
        "no-extra-parens": [
          "error",
          "all",
          {
            "nestedBinaryExpressions": false
          }
        ],
        "arrow-parens": [
          "error",
          "as-needed"
        ],
        "no-underscore-dangle": "error",
        "no-alert": "error",
        "eol-last": "error",
        "no-trailing-spaces": "error",
        "no-throw-literal": "error",
        "max-params": [
          "error",
          7
        ],
        "consistent-return": "error",
        "no-nested-ternary": "error",
        "no-duplicate-imports": "error",
        "no-extra-semi": "error"
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.ts"
      ],
      "extends": [
        "plugin:@ngrx/recommended"
      ]
    }
  ]
}
